<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Registrar Cuenta</h3>
            </div>
            <div class="card-body">
                <form action="/users/singup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value={{name}}>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo" value={{email}}>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Clave" value={{password}}>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirmar Clave" value={{confirmPassword}}>
                    </div>
                    <div class="form-group">
                        <Button class="btn btn-primary col-12">Guardar</Button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>