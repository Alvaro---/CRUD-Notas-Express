<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/newNotes" method="POST">
                <!--Envia a esa ruta. El servidor en router buscara esa ruta. -->
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control" placeholder="descripcion"></textarea>
                    <!-- class form control ayuda a que se ajuste a la pantalla -->
                </div>
                <div class="form-group">
                    <button class="btn btn-primary col-12" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>