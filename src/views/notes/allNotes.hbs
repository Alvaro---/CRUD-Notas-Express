<div class="row">
    <h1>Hola {{user.name}}</h1>
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between aling-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                </h4>
                <p>{{descripcion}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">

                    <Button type="submit" class="btn btn-danger col-12 justify-content-between aling-items-center">
                        Eliminar <i class="fas fa-trash-alt"></i></Button>
                </form>

            </div>
        </div>
    </div>

    {{else}}
    <div class="card mx-auto col-md-3">
        <div class="card-body">

            <p class="lead">Ingrese una tarea </p>
            <a href="/notes/add" class="btn btn-success col-12"> Crea una aqu√≠</a>
        </div>
    </div>
    {{/each}}
</div>